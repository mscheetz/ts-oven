{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
  
      "sourceMap": true,
  
      "strict": true,
      "strictPropertyInitialization": false,
      
      "noUnusedLocals": false,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
  
      "esModuleInterop": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }